<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <template class="PreferencesDialog" parent="AdwPreferencesDialog">
    <property name="title" translatable="true">Preferences</property>
    <child>
      <object class="AdwPreferencesPage">
        <child>
          <object class="AdwPreferencesGroup">
            <property name="title" translatable="true">Hardware Acceleration</property>
            <child>
              <object class="AdwSwitchRow" id="gpu_encoding_row">
                <!-- TRANSLATORS: GPU as in 'graphics processing unit' -->
                <property name="title" translatable="true">GPU Encoding</property>
                <!-- TRANSLATORS: GPU as in 'graphics processing unit' -->
                <property name="subtitle" translatable="true">Use the GPU to speed up encoding when available</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwPreferencesGroup">
            <property name="title" translatable="true">Exported Video Suffix</property>
            <property name="header-suffix">
              <object class="GtkMenuButton">
                <property name="tooltip-text" translatable="true">More Information</property>
                <property name="icon-name">help-about-symbolic</property>
                <property name="popover">
                  <object class="GtkPopover" id="suffix_info_popover">
                    <property name="child">
                      <object class="GtkLabel" id="suffix_info_label">
                        <property name="halign">center</property>
                        <property name="margin-start">6</property>
                        <property name="margin-end">6</property>
                        <property name="margin-top">6</property>
                        <property name="margin-bottom">6</property>
                        <property name="wrap">True</property>
                        <property name="max-width-chars">50</property>
                        <property name="valign">center</property>
                      </object>
                    </property>
                  </object>
                </property>
                <style>
                  <class name="flat"/>
                </style>
              </object>
            </property>
            <child>
              <object class="AdwEntryRow" id="suffix_entry_row">
                <property name="title" translatable="yes">Custom Suffix</property>
                <property name="show-apply-button">True</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
