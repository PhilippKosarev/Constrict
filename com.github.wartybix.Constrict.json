{
    "id" : "com.github.wartybix.Constrict",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "48",
    "sdk" : "org.gnome.Sdk",
    "command" : "constrict",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "add-extensions" : {
        "org.freedesktop.Platform.ffmpeg-full" : {
            "version" : "24.08",
            "directory" : "lib/ffmpeg",
            "add-ld-path" : ".",
            "no-autodownload" : false,
            "autodelete" : false
        }
    },
    "cleanup-commands" : [
        "mkdir -p ${FLATPAK_DEST}/lib/ffmpeg"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "constrict",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "."
                }
            ]
        }
    ]
}
